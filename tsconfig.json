{
  "compilerOptions": {
    "module": "system",
    "target": "es5",
    "moduleResolution": "node",
    "removeComments": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "lib": ["es5", "es6", "dom"],
    "sourceMap": true,
    "newLine": "LF",
    "baseUrl": "./src",
    "outDir": "./dist"
  },
  "exclude": [
    "node_modules"
  ],
  "include" : [
    "src/**/*.ts"
  ]
}
