:host
  width 100%
  .row
    margin 0
  .files-uploader
    min-height 300px
    max-height 500px
    display flex
    flex-direction column
    justify-content flex-start
    box-shadow inset 0 0 5px 2px rgba(0, 0, 0, 0.17)
    padding 20px
    background #ffffff
    .files-uploader-footer
      margin-top auto

    .files-uploader-header
      & > *
        margin-right 10px
      *:last-child
        margin-right 0

    .files-uploader-body
      height 120px
      .upload-files-table
        .upload-files-table-body
          height 100%
          overflow-y auto
      .upload-files-drop-zone
        height 100%
        align-items center
        justify-content center
        display flex
        background rgba(152, 152, 152, 0.14)
        border dotted 2px rgba(0, 0, 0, 0.24)
        &.nv-file-over
          border-color red
        div
          font-size 30px
          color rgba(145, 148, 151, 0.57)
          text-transform capitalize
