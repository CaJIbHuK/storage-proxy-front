:host
  height 100%
  min-height 400px
  display flex
  flex-direction column
  cursor default
  &.loading .table-body
    opacity 0.7

.files-list
  height 100%
  display flex
  flex-direction column
  hr
    border-top 1px solid rgba(0, 0, 0, 0.11)
    width 100%
  .table-header
    font-weight 600
    color #45695d
    padding-bottom 8px
    margin 0 0 10px 0
    .create-menu
      height  100%
      padding 0
      button
        cursor pointer
  .table-body
    user-select none
    box-shadow inset 0 0 5px 2px rgba(0, 0, 0, 0.17)
    background white
    overflow-y auto
    height 100%
    overflow-x hidden
    .file
      border-bottom 1px solid #d6d6d6
      border-left 1px solid #d6d6d6
      border-right 1px solid #d6d6d6
      position relative
      margin 0
      padding 8px 0 8px 0
      color rgb(67, 95, 86)
      &.selected
        background rgba(110, 144, 111, 0.74)
        color white
      .file-preloader
        height 30px
        width 30px
        margin auto
